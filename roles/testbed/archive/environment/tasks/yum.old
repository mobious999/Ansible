---
- name: yum clean expire-cache
  shell: yum clean expire-cache 
  when: yum_update == "true"

- name: fix python-backports-ssl_match_hostname
  shell: rm -rf /usr/lib/python2.7/site-packages/backports.ssl_match_hostname-3.* & yum reinstall python-backports-ssl_match_hostname || true 
  when: fix_python_backports_ssl_match_hostname == "true"

- name: yum update
  shell: yum -y --skip-broken {{ yum_skip_flag | default('') }} update 
  environment:
    ACCEPT_EULA: 'y'
  when: yum_update == "true"

