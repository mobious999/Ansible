---
- name: Configuration of http proxy
  lineinfile:
    dest: /etc/environment
    insertafter: EOF
    create: yes
    line: 'http_proxy={{ proxy_server_url }}'

- name: Configuration of https proxy
  lineinfile:
    dest: /etc/environment
    insertafter: EOF
    create: yes
    line: 'https_proxy={{ proxy_server_url }}'

- name: Configuration of https proxy
  lineinfile:
    dest: /etc/environment
    insertafter: EOF
    create: yes
    line: 'no_proxy=localhost,.{{ dns_zone }}'


