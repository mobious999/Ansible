[Unit]
Description=Apache ZooKeeper
Documentation=https://zookeeper.apache.org
Requires=network.target
After=network.target

[Service]
User={{ ansible_user }}
Group={{ ansible_user }}
ExecStart=/opt/zookeeper/latest/bin/zkServer.sh start /opt/zookeeper/conf/zoo.cfg
ExecStop=/opt/zookeeper/latest/bin/zkServer.sh stop /opt/zookeeper/conf/zoo.cfg
ExecReload=/opt/zookeeper/latest/bin/zkServer.sh restart /opt/zookeeper/conf/zoo.cfg
TimeoutSec=300
Restart=on-failure

[Install]
WantedBy=default.target
