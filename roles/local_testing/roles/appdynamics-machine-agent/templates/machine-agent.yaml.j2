    host: {{ controller_host }}
    port: {{ controller_port }}
    ssl: {{ controller_ssl | default(true) }}
    account-name: {{ account_name }}
    account-access-key: {{ account_access_key }}
    application-name: {{ application_name }}
    tier-name: {{ tier_name }}
    node-name: {{ inventory_hostname }}

